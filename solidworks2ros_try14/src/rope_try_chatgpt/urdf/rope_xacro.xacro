<?xml version="1.0"?>
<robot name="simple_rope" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Base link (fixed to world) -->
  <link name="base_link">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="Grey"/>
    </visual>
  </link>

  <!-- Rope links and joints -->
  <xacro:property name="link_length" value="0.2"/>
  <xacro:property name="num_links" value="5"/>

  <!-- Create the first link connected to the base -->
  <link name="rope_link_0">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 ${link_length/2}"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.02" length="${link_length}"/>
      </geometry>
      <material name="Green"/>
    </visual>
  </link>

  <joint name="joint_0" type="prismatic">
    <parent link="base_link"/>
    <child link="rope_link_0"/>
    <origin xyz="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="50" lower="0" upper="0.5" velocity="1.0"/>
  </joint>

  <!-- Manually add subsequent links -->
  <link name="rope_link_1">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 ${link_length/2}"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.02" length="${link_length}"/>
      </geometry>
      <material name="Green"/>
    </visual>
  </link>

  <joint name="joint_1" type="prismatic">
    <parent link="rope_link_0"/>
    <child link="rope_link_1"/>
    <origin xyz="0 0 ${link_length}"/>
    <axis xyz="0 0 1"/>
    <limit effort="50" lower="0" upper="0.5" velocity="1.0"/>
  </joint>

  <link name="rope_link_2">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 ${link_length/2}"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.02" length="${link_length}"/>
      </geometry>
      <material name="Green"/>
    </visual>
  </link>

  <joint name="joint_2" type="prismatic">
    <parent link="rope_link_1"/>
    <child link="rope_link_2"/>
    <origin xyz="0 0 ${link_length}"/>
    <axis xyz="0 0 1"/>
    <limit effort="50" lower="0" upper="0.5" velocity="1.0"/>
  </joint>

  <link name="rope_link_3">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 ${link_length/2}"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.02" length="${link_length}"/>
      </geometry>
      <material name="Green"/>
    </visual>
  </link>

  <joint name="joint_3" type="prismatic">
    <parent link="rope_link_2"/>
    <child link="rope_link_3"/>
    <origin xyz="0 0 ${link_length}"/>
    <axis xyz="0 0 1"/>
    <limit effort="50" lower="0" upper="0.5" velocity="1.0"/>
  </joint>

  <link name="rope_link_4">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 ${link_length/2}"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.02" length="${link_length}"/>
      </geometry>
      <material name="Green"/>
    </visual>
  </link>

  <joint name="joint_4" type="prismatic">
    <parent link="rope_link_3"/>
    <child link="rope_link_4"/>
    <origin xyz="0 0 ${link_length}"/>
    <axis xyz="0 0 1"/>
    <limit effort="50" lower="0" upper="0.5" velocity="1.0"/>
  </joint>

</robot>
